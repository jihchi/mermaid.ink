{
  "name": "mermaid.ink",
  "version": "13.0.1",
  "description": "https://mermain.ink",
  "homepage": "https://github.com/jihchi/mermaid.ink#readme",
  "bugs": {
    "url": "https://github.com/jihchi/mermaid.ink/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jihchi/mermaid.ink.git"
  },
  "license": "MIT",
  "author": "jihchi",
  "type": "module",
  "imports": {
    "#@/*": "./src/*"
  },
  "main": "src/index.js",
  "scripts": {
    "format": "sort-package-json && prettier --write \"{src,test,db}/**/*.{mjs,js,html,sql}\" \"*.{js,cjs,mjs,md}\"",
    "migrate": "env PGIDLE_TIMEOUT=1 node ./db/migrate.js",
    "start": "node src/index.js",
    "test": "vitest",
    "test:watch": "pnpm test --watch"
  },
  "prettier": {
    "language": "postgresql",
    "plugins": [
      "prettier-plugin-sql"
    ],
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@koa/cors": "^5.0.0",
    "@mermaid-js/layout-elk": "^0.2.0",
    "@mermaid-js/layout-tidy-tree": "^0.2.0",
    "@mermaid-js/mermaid-zenuml": "^0.2.2",
    "debug": "^4.4.3",
    "js-base64": "^3.7.8",
    "koa": "^3.1.1",
    "koa-route": "^4.0.1",
    "mermaid": "^11.12.2",
    "p-queue": "^9.0.1",
    "pako": "^2.1.0",
    "postgres": "^3.4.7",
    "postgres-shift": "^0.1.0",
    "puppeteer": "^24.33.0"
  },
  "devDependencies": {
    "pdf-lib": "^1.17.1",
    "prettier": "3.7.4",
    "prettier-plugin-sql": "^0.19.2",
    "sharp": "^0.34.5",
    "sort-package-json": "3.6.0",
    "supertest": "^7.1.4",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">= 22",
    "pnpm": ">= 10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "puppeteer",
      "sharp"
    ]
  }
}
